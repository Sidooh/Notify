generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Notifiable {
  id              BigInt  @id @default(autoincrement()) @db.UnsignedBigInt
  notification_id BigInt  @db.UnsignedBigInt
  provider        String? @db.VarChar(70)
  message_id      String? @db.VarChar(255)
  phone           String? @db.VarChar(15)
  description     String? @db.VarChar(255)
  status          String  @default("PENDING") @db.VarChar(255)
  cost            Decimal @default(0.0000) @db.Decimal(8, 4)
  status_code     Int?

  created_at DateTime? @default(now()) @db.Timestamp(6)
  updated_at DateTime? @default(now()) @db.Timestamp(6)

  notification Notification @relation(fields: [notification_id], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("notifiables")
}

model Notification {
  id          BigInt @id @default(autoincrement()) @db.UnsignedBigInt
  channel     String @db.VarChar(20)
  destination String @db.VarChar(50)
  event_type  String @default("DEFAULT") @db.VarChar(50)
  content     String @db.Text
  status      String @default("PENDING") @db.VarChar(255)

  created_at DateTime? @default(now()) @db.Timestamp(6)
  updated_at DateTime? @default(now()) @db.Timestamp(6)

  notifiables Notifiable[]

  @@map("notifications")
}

model Setting {
  id    BigInt @id @default(autoincrement()) @db.UnsignedBigInt
  key   String @unique @db.VarChar(255)
  value String @db.VarChar(255)

  created_at DateTime? @default(now()) @db.Timestamp(6)
  updated_at DateTime? @default(now()) @db.Timestamp(6)

  @@map("settings")
}

model SmsProvider {
  id          BigInt @id @default(autoincrement()) @db.UnsignedBigInt
  name        String @unique @db.VarChar(50)
  priority    Int    @db.TinyInt
  environment String @db.VarChar(20)
  status      String @default("ACTIVE") @db.VarChar(20)

  created_at DateTime? @default(now()) @db.Timestamp(6)
  updated_at DateTime? @default(now()) @db.Timestamp(6)

  @@map("sms_providers")
}
