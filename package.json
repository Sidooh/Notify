{
  "name": "sidooh-notify",
  "packageManager": "yarn@3.1.1",
  "version": "1.0.0",
  "description": "Sidooh notification service",
  "main": "index.js",
  "repository": "https://github.com/Nabcellent/sidooh-notify",
  "author": "Nabcellent",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest --watchAll --no-cache",
    "prod": "node dist/src/index.js",
    "start": "tsc-watch --onSuccess \"nodemon ./dist/src/index.js\"",
    "build": "tsc",
    "postinstall": "yarn run build"
  },
  "dependencies": {
    "africastalking": "^0.5.4",
    "axios": "^0.24.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.10.7",
    "dotenv": "^10.0.0",
    "envalid": "^7.2.2",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "joi": "^17.5.0",
    "module-alias": "^2.2.2",
    "mongoose": "^6.1.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.2",
    "pino": "^7.5.1",
    "pino-pretty": "^7.2.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.12",
    "@types/nodemailer": "^6.4.4",
    "@types/supertest": "^2.0.11",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.4.5",
    "mongodb-memory-server": "^8.1.0",
    "nodemon": "^2.0.15",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node-dev": "^1.1.8",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.5.4"
  },
  "jest": {
    "rootDir": "./tests",
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>../src/$1"
    },
    "setupFilesAfterEnv": [
      "./setup.ts"
    ]
  },
  "_moduleAliases": {
    "@/models": "dist/src/models",
    "@/resources": "dist/src/resources",
    "@/utils": "dist/src/utils",
    "@/middleware": "dist/src/middleware",
    "@/services": "dist/src/services"
  },
  "engines": {
    "node": "16.13.0"
  }
}
